<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_video_item"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:background="@drawable/bg_video_item_img"/>

            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:src="@mipmap/biz_video_list_item_play_icon_small" />
        </FrameLayout>

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12sp"
            android:paddingTop="8sp"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_max_size" />

        <TextView
            android:id="@+id/video_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12sp"
            android:paddingTop="8sp"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_mid_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/biz_video_list_item_time_icon"
                android:drawablePadding="4sp"
                android:gravity="center"
                android:paddingBottom="8sp"
                android:paddingLeft="12sp"
                android:paddingTop="8sp"
                android:text="2;14"
                android:textColor="@color/text_color_gray" />

            <TextView
                android:id="@+id/video_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@mipmap/biz_video_list_item_play_icon_small"
                android:drawablePadding="4sp"
                android:gravity="center"
                android:paddingBottom="8sp"
                android:paddingLeft="12sp"
                android:paddingTop="8sp"
                android:textColor="@color/text_color_gray" />

            <TextView
                android:id="@+id/video_reply_count"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:drawablePadding="4sp"
                android:drawableRight="@mipmap/biz_video_list_item_tie_arrow_icon"
                android:gravity="center_vertical|right"
                android:paddingBottom="8sp"
                android:paddingRight="12sp"
                android:paddingTop="8sp"
                android:textColor="@color/text_color_gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>